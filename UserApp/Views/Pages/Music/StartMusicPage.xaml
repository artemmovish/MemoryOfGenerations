<Page x:Class="UserApp.Views.Pages.Music.StartMusicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Views.Pages.Music"
      mc:Ignorable="d" 
      d:DesignWidth="1920"
      Title="StartMusicPage">

    <Grid>
        <Image Source="/Resources/Music/backStart.png" Stretch="Fill"/>

        <Canvas>

            <Button Style="{StaticResource RoundedButtonStyle}" Width="372" Height="89"
                     Canvas.Left="1318" Canvas.Top="763" Click="Start_Click">
                <Button.Content>
                    <TextBlock Text="Слшуать" Style="{StaticResource btnText}" Foreground="White"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource RoundButtonStyle}" Click="Button_Click" Background="Black" Canvas.Left="10" Canvas.Top="970">
                <Button.Content>
                    <TextBlock Text="&lt;" Foreground="White" FontSize="36" FontWeight="Bold"/>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource RoundButtonStyle}" Click="Button_Click" Background="Black" Canvas.Left="1810" Canvas.Top="970" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="&gt;" Foreground="White" FontSize="36" FontWeight="Bold"/>
            </Button>
        </Canvas>
    </Grid>
</Page>

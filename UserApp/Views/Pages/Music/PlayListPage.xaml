<Page x:Class="UserApp.Views.Pages.Music.PlayListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Views.Pages.Music"
      mc:Ignorable="d" 
      d:Height="1080" d:DesignWidth="1920" 
      Title="PlayListPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid x:Name="UserPanel" Visibility="Visible">
            <Image Source="/Resources/Music/backPlayList.png"/>
            <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Margin="60">
                <StackPanel>
                    <Border Width="300" Height="300" Style="{StaticResource RoundedBorderStyle}" CornerRadius="300">
                        <Image Source="{Binding CurrentPlayList.ImagePath}" Stretch="UniformToFill"/>
                    </Border>
                    <TextBlock Text="{Binding CurrentPlayList.Name}" Margin="0,20,0,0"/>
                    
                </StackPanel>
            </Grid>

            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <ListView ItemsSource="{Binding MusicsInPlayList}" 
          HorizontalAlignment="Center"
          Background="Transparent">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="30" Margin="20" 
                    Style="{StaticResource RoundedBorderStyle}">
                                <Button Command="{Binding DataContext.ChooseAMusicCommand, 
                        RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource RoundedButtonStyle}"
                        Background="Transparent">
                                    <Grid Width="550" Height="350" Background="Black">
                                        <StackPanel>
                                            <Border Margin="10" Width="510" Height="200" 
                                    CornerRadius="15" 
                                    Style="{StaticResource RoundedBorderStyle}">
                                                <Image Source="{Binding ImagePath}" 
                                       Stretch="UniformToFill"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" 
                                       Style="{StaticResource title}" 
                                       Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding Actor.Name}" 
                                       Style="{StaticResource discription}" 
                                       Margin="10"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid x:Name="AdminPanel" Visibility="Collapsed" Background="#292929">
            <Border Width="450" Height="450" CornerRadius="450" Style="{StaticResource RoundedBorderStyle}" 
            Margin="50,80,0,0" Padding="0" Background="Transparent"
            VerticalAlignment="Top" HorizontalAlignment="Left">
                <Button Command="{Binding AddImageCommand}" Background="Transparent">
                    <Grid>
                        <Image Source="/Resources/Music/AddCover.png" />
                        <Image Source="{Binding ImagePath}" Stretch="UniformToFill" 
                       VerticalAlignment="Top" HorizontalAlignment="Left"
                       Width="450" Height="450"/>
                    </Grid>
                </Button>
            </Border>

            <StackPanel Margin="534,80,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Название:" Style="{StaticResource h1}" Foreground="White"/>
                    <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="30" Grid.Column="1">
                        <TextBox Style="{StaticResource SearchBox}" FontSize="80"
                         Text="{Binding CurrentPlayList.Name, Mode=TwoWay}"/>
                    </Border>
                </Grid>

                <TextBlock Text="Доступные треки:" Style="{StaticResource h1}" Margin="0,20,0,0"/>
                <ListView ItemsSource="{Binding Musics}" Margin="0,20,0,0" 
                  VerticalAlignment="Bottom">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="30" Margin="20,0,20,0" Style="{StaticResource RoundedBorderStyle}">
                                <Button Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding DataContext.AddMusicToPlayListCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                        Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <Grid Width="450" Height="350">
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <Image Width="200" Height="280"
                                           VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                           Source="{Binding ImagePath}"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="372*"/>
                                                    <ColumnDefinition Width="199*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Foreground="White" Text="{Binding Name}" Style="{StaticResource title}" Margin="15,30,0,0"/>
                                                    <TextBlock Foreground="White" Text="{Binding Genre}" Style="{StaticResource discription}" Margin="15,30,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Button.Content>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Text="Треки в плейлисте:" Style="{StaticResource h1}" Margin="0,20,0,0"/>
                <ListView ItemsSource="{Binding MusicsInPlayList}" Margin="0,20,0,0" 
                  VerticalAlignment="Bottom">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="30" Margin="20,0,20,0" Style="{StaticResource RoundedBorderStyle}">
                                <Button Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding DataContext.RemoveMusicFromPlayListCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                        Background="Transparent" Padding="0">
                                    <Button.Content>
                                        <Grid Width="450" Height="350">
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <Image Width="200" Height="280"
                                           VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                           Source="{Binding ImagePath}"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="372*"/>
                                                    <ColumnDefinition Width="199*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" Style="{StaticResource title}" Margin="15,30,0,0" Foreground="White"/>
                                                    <TextBlock Text="{Binding Genre}" Style="{StaticResource discription}" Margin="15,30,0,0" Foreground="White"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Button.Content>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Width="426" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="58,560,0,0">
                <Button Margin="0,10,0,0" Height="60" Style="{StaticResource RoundedButtonStyle}"
                Command="{Binding DeletePlayListCommand}">
                    <Button.Content>
                        <TextBlock Text="Удалить плейлист" Style="{StaticResource btnText}"/>
                    </Button.Content>
                </Button>
                <Button Margin="0,10,0,0" Height="60" Style="{StaticResource RoundedButtonStyle}"
                Command="{Binding SavePlayListCommand}">
                    <Button.Content>
                        <TextBlock Text="Сохранить плейлист" Style="{StaticResource btnText}"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

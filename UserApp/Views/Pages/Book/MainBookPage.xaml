<Page x:Class="UserApp.Views.Pages.Book.MainBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Views.Pages.Book"
      xmlns:vm="clr-namespace:UserApp.ViewModels.BookVM"
      xmlns:converter="clr-namespace:UserApp.Convertes"
      Loaded="Page_Loaded"
      mc:Ignorable="d"
      d:DesignWidth="1920"
      Title="MainBookPage">
    <d:Page.DataContext>
        <vm:MainBookViewModel/>
    </d:Page.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="1080"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!--выход-->
            <Grid Grid.Row="1">
                <Image Source="/Resources/Book/background.png"/>
                <Canvas ClipToBounds="True">
                    <Canvas.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="446"/>
                            <Setter Property="Height" Value="665"/>
                        </Style>
                    </Canvas.Resources>
                    <Image Source="/Resources/Book/book6.png" Canvas.Left="774" Canvas.Top="123" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Image Source="/Resources/Book/book7.png" Canvas.Left="1182" Canvas.Top="-80"/>
                    <Image Source="/Resources/Book/book8.png" Canvas.Left="1545" Canvas.Top="105"/>
                    <Image Source="/Resources/Book/book9.png" Canvas.Left="1088" Canvas.Top="503"/>
                    <Image Source="/Resources/Book/book10.png" Canvas.Left="1462" Canvas.Top="744" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                    <TextBlock Text="Литературное наследие" Style="{StaticResource h1}" Width="763"
                               Canvas.Left="51" Canvas.Top="199"/>
                    <TextBlock Text="Здесь собраны книги, отражающие опыт, мудрость и вдохновение прошлого,
чтобы вы могли открыть для себя ценности, которые имеют важное значение и сегодня."
                               Style="{StaticResource h2}" Width="763"
                               Canvas.Left="51" Canvas.Top="483"/>
                </Canvas>
            </Grid>

            <!--Поиск-->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resources/Book/search.png"/>

                <Grid Grid.Column="1" Height="90" Margin="30,0,100,0">
                    <Rectangle RadiusX="30"  RadiusY="30" Fill="#F3F3F3"/>
                    <TextBox Text="{Binding SearchText}" Style="{StaticResource SearchBox}"
                             Margin="20"
                             Background="Transparent" BorderThickness="0"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <StackPanel.Resources>
                        <Style TargetType="Hyperlink" BasedOn="{StaticResource {x:Type Hyperlink}}">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock VerticalAlignment="Center" Margin="20">
                        <Hyperlink >
                            Книги
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" Margin="20">
                        <Hyperlink >
                            Авторы
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" Margin="20">
                        <Hyperlink >
                            Жанры
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!--Содержание-->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid x:Name="AuthorPanel">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Авторы" Margin="30" 
                                       Style="{StaticResource h1}"/>
                            <Button Background="Black" FontSize="90" Style="{StaticResource RoundButtonStyle}"
                                    x:Name="AddAuthorBtn" Command="{Binding AddAnAuthorCommand}" Panel.ZIndex="100">
                                <TextBlock Text="+" FontSize="80" Style="{StaticResource btnText}"/>
                            </Button>
                        </StackPanel>
                        
                        <ListView ItemsSource="{Binding Authors}" HorizontalAlignment="Center">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <ItemContainerTemplate>
                                    <Border CornerRadius="30" Margin="20,0,20,0" Style="{StaticResource RoundedBorderStyle}">
                                        <Button Style="{StaticResource RoundedButtonStyle}"
                                                CommandParameter="{Binding}" Command="{Binding DataContext.ChooseAnAuthorCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <Grid Width="570" Height="470">
                                                    <Image Width="590" Height="490" Source="/Resources/Book/background.png" Stretch="Fill"/>
                                                    <Image Width="320" Height="400"
                                                        VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                                           Source="{Binding PhotoPath}"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="372*"/>
                                                            <ColumnDefinition Width="199*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name}" Style="{StaticResource title}" Margin="15,30,0,0"/>
                                                            <TextBlock Text="{Binding InterestingFacts}" Style="{StaticResource discription}" Margin="15,30,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Button.Content>
                                        </Button>
                                    </Border>
                                </ItemContainerTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>

                <Grid x:Name="AudioBookPanel" Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Аудиокниги" Margin="30" Style="{StaticResource h1}"/>
                        <ListView ItemsSource="{Binding Books}" HorizontalAlignment="Center">
                            
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <ItemContainerTemplate>
                                    <Border CornerRadius="30" Margin="20,0,20,0" Style="{StaticResource RoundedBorderStyle}">
                                        <Button Style="{StaticResource RoundedButtonStyle}"
                            CommandParameter="{Binding}" Command="{Binding DataContext.ChooseAnBookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                            Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <Grid Width="600" Height="300">
                                                    <Image Width="610" Height="310" Source="/Resources/Book/background.png" Stretch="Fill"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Image Width="166" Height="260" Margin="20"
                                                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                                                               Source="{Binding CoverImagePath}"/>
                                                        <StackPanel Grid.Column="1" Margin="0,30,0,0">
                                                            <TextBlock Text="{Binding Title}" Style="{StaticResource title}"/>
                                                            <TextBlock Text="{Binding Author.Name}" Style="{StaticResource discription}"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Grid.Column="1" Margin="0,0,0,10"
                                                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                                       Text="Продолжительность "
                                                                       FontSize="20"/>
                                                            <TextBlock Grid.Column="1" Margin="0,0,0,10"
                                                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                                       Text="{Binding AudioBookPath, Converter={StaticResource audioDurationConverter}}"
                                                                       FontSize="20"/>
                                                        </StackPanel>
                                                       
                                                    </Grid>
                                                </Grid>
                                            </Button.Content>
                                        </Button>
                                    </Border>
                                </ItemContainerTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>

                <Grid x:Name="GenrePanel" Grid.Row="2">
                    <StackPanel>
                        <TextBlock Text="Жанры" Margin="30" 
                                   Style="{StaticResource h1}"/>
                        <ListView HorizontalAlignment="Center">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.Items>
                                <ListViewItem>
                                    <ListViewItem.Content>
                                        <Grid Width="400" Height="400" Margin="20,40,20,40">
                                            <Grid.Effect>
                                                <DropShadowEffect BlurRadius="40"/>
                                            </Grid.Effect>
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Image Source="/Resources/Book/Genre/love.png"/>
                                                <TextBlock TextAlignment="Center" Text="Романтика" Style="{StaticResource title}"/>
                                            </StackPanel>
                                        </Grid>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem>
                                    <ListViewItem.Content>
                                        <Grid Width="400" Height="400" Margin="20,40,20,40">
                                            <Grid.Effect>
                                                <DropShadowEffect BlurRadius="40"/>
                                            </Grid.Effect>
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Image Source="/Resources/Book/Genre/horror.png"/>
                                                <TextBlock TextAlignment="Center" Text="Ужасы" Style="{StaticResource title}"/>
                                            </StackPanel>
                                        </Grid>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem>
                                    <ListViewItem.Content>
                                        <Grid Width="400" Height="400" Margin="20,40,20,40">
                                            <Grid.Effect>
                                                <DropShadowEffect BlurRadius="40"/>
                                            </Grid.Effect>
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Image Source="/Resources/Book/Genre/psih.png"/>
                                                <TextBlock TextAlignment="Center" Text="Психология" Style="{StaticResource title}"/>
                                            </StackPanel>
                                        </Grid>
                                    </ListViewItem.Content>
                                </ListViewItem>
                                <ListViewItem>
                                    <ListViewItem.Content>
                                        <Grid Width="400" Height="400" Margin="20,40,20,40">
                                            <Grid.Effect>
                                                <DropShadowEffect BlurRadius="40"/>
                                            </Grid.Effect>
                                            <Image Source="/Resources/Book/background.png" Stretch="Fill"/>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Image Source="/Resources/Book/Genre/detective.png"/>
                                                <TextBlock TextAlignment="Center" Text="Детективы" Style="{StaticResource title}"/>
                                            </StackPanel>
                                        </Grid>
                                    </ListViewItem.Content>
                                </ListViewItem>
                            </ListView.Items>
                        </ListView>
                    </StackPanel>
                </Grid>
                <Grid x:Name="BookPanel" Grid.Row="4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Книги" Margin="30" 
               Style="{StaticResource h1}"/>
                            <Button Background="Black" FontSize="90" Style="{StaticResource RoundButtonStyle}"
                                    x:Name="AddBookBtn" Command="{Binding AddAnBookCommand}">
                                <TextBlock Text="+" FontSize="80" Style="{StaticResource btnText}"/>
                            </Button>
                        </StackPanel>
                        <ListView ItemsSource="{Binding Books}" Margin="20" HorizontalAlignment="Center">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <ItemContainerTemplate>
                                    <Border CornerRadius="30" Margin="30,0,30,0" Style="{StaticResource RoundedBorderStyle}">
                                        <Button Style="{StaticResource RoundedButtonStyle}"
             CommandParameter="{Binding}" Command="{Binding DataContext.ChooseAnBookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
             Background="Transparent" Padding="0">
                                            <Button.Content>
                                                <Image Width="550" Height="850" Source="{Binding CoverImagePath}"/>
                                            </Button.Content>
                                        </Button>
                                    </Border>
                                </ItemContainerTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--Концовка-->
            <Grid Grid.Row="4" Width="1645" VerticalAlignment="Center">
                <TextBlock FontSize="32" Foreground="#787878"
                    Text="Все права защищены. Адрес: ООО “Память Поколений”, 210017, г. Витебск, ул. Гагарина, д. 41. Email: talainastia10@gmail.com"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

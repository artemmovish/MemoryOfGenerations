<Page x:Class="UserApp.Views.Pages.Book.MainBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Views.Pages.Book"
      xmlns:vm="clr-namespace:UserApp.ViewModels.Book"
      mc:Ignorable="d"
      d:DesignWidth="1920"
      Title="MainBookPage">
    <d:Page.DataContext>
        <vm:MainBookViewModel/>
    </d:Page.DataContext>
    <ScrollViewer>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="165"/>
                <RowDefinition Height="1080"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <!--Шапка-->
            <Grid>
                <Image Source="/Resources/Book/icon.png" Margin="10" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center" Margin="20">
                         <Hyperlink>
                             О нас
                         </Hyperlink>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" Margin="20">
                        <Hyperlink>
                            Помощь
                        </Hyperlink>
                    </TextBlock>
                    <Button Style="{StaticResource RoundButtonStyle}">
                        <Image Source="/Resources/Book/icon.png" />
                    </Button> 
                </StackPanel>
            </Grid>
            
            <!--выход-->
            <Grid Grid.Row="1">
                <Image Source="/Resources/Book/background.png"/>
                <Canvas>
                    <Image Source="/Resources/Book/book6.png"/>
                    <Image Source="/Resources/Book/book7.png"/>
                    <Image Source="/Resources/Book/book8.png"/>
                    <Image Source="/Resources/Book/book9.png"/>
                    <Image Source="/Resources/Book/book10.png"/>
                </Canvas>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

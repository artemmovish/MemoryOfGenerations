<Page x:Class="UserApp.Views.Pages.Book.AuthorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp.Views.Pages.Book"
      xmlns:vm="clr-namespace:UserApp.ViewModels.BookVM"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignWidth="1920"
      Title="AuthorPage">
    <d:Page.DataContext>
        <vm:AuthorViewModel/>
    </d:Page.DataContext>
    <Grid Height="1080">
        <Image Source="/Resources/Book/background.png"/>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" x:Name="UserPanel" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Image Source="{Binding SelectedAuthor.PhotoPath}" Margin="50,80,0,0"
              VerticalAlignment="Top" HorizontalAlignment="Left" Width="426" Height="667" Stretch="Fill"/>
                    <StackPanel Width="426" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="50,800,0,0"/>
                    <StackPanel Margin="532,80,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Имя:" Style="{StaticResource h1}"/>
                            <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="30" Grid.Column="1">
                                <TextBlock Style="{StaticResource discription}"  FontSize="80"
                            Text="{Binding SelectedAuthor.Name}"/>
                            </Border>

                        </Grid>
                        <Grid Margin="0,20,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Имя:" Style="{StaticResource h1}" FontSize="40"/>
                            <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="15" Grid.Column="1">
                                <TextBlock Style="{StaticResource discription}"  FontSize="40"
                            Text="{Binding SelectedAuthor.LifeDate}"/>
                            </Border>
                        </Grid>
                        
                        <TextBlock Text="Биография:" Style="{StaticResource h1}" FontSize="40"/>
                        <TextBlock Style="{StaticResource discription}"  FontSize="40"
Text="{Binding SelectedAuthor.Biography}"/>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Row="2">
                    <StackPanel>
                        <TextBlock Text="Книги автора:" Style="{StaticResource h1}"/>
                        <ListView ItemsSource="{Binding SelectedAuthor.Books}" Background="Transparent">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <ItemContainerTemplate>
                                    <Button Background="Transparent" BorderThickness="0">
                                        <Image Source="{Binding CoverImagePath}" Width="220" Height="335"/>
                                    </Button>
                                </ItemContainerTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    
                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid x:Name="AdminPanel" Visibility="Visible">
            
            <Grid>
                <Image Source="/Resources/Book/background.png"/>
                <Button Width="426" Height="667" Margin="50,80,0,0" Padding="0" Background="Transparent"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Command="{Binding AddPhotoCommand}">
                    <Image Source="/Resources/Book/AuthorAddPhoto.png" Stretch="Fill"/>
                </Button>
                <Image Source="{Binding PhotoPath}" Margin="50,80,0,0"
                       VerticalAlignment="Top" HorizontalAlignment="Left" Width="426" Height="667" Stretch="Fill"/>
                <StackPanel Width="426" VerticalAlignment="Top" HorizontalAlignment="Left"
                            Margin="50,800,0,0">
                    <Button Style="{StaticResource RoundedButtonStyle}" Height="90"
                            Command="{Binding DeleteAuthorCommand}">
                        <Button.Content>
                            <TextBlock Text="Удалить" Style="{StaticResource btnText}"/>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource RoundedButtonStyle}" Height="90" Margin="0,20,0,0" Command="{Binding SaveAuthorCommand}">
                        <Button.Content>
                            <TextBlock Text="Сохранить" Style="{StaticResource btnText}"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Margin="532,80,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Имя:" Style="{StaticResource h1}"/>
                        <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="30" Grid.Column="1">
                            <TextBox Style="{StaticResource SearchBox}"  FontSize="80"
                                     Text="{Binding SelectedAuthor.Name}"/>
                        </Border>
                    </Grid>
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Года жизни:" Style="{StaticResource h1}" FontSize="40"/>
                        <Border Style="{StaticResource RoundedBorderStyle}" CornerRadius="15" Grid.Column="1">
                            <TextBox Style="{StaticResource SearchBox}"  FontSize="40"
                                     Text="{Binding SelectedAuthor.LifeDate}"/>
                        </Border>
                    </Grid>
                    <TextBlock Text="Биография:" Style="{StaticResource h1}" FontSize="40"/>
                    <TextBox Style="{StaticResource SearchBox}"  FontSize="40"
         Text="{Binding SelectedAuthor.Biography}" Height="386" VerticalScrollBarVisibility="Auto"/>
                    <ListView ItemsSource="{Binding SelectedAuthor.Books}" Background="Transparent">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <ItemContainerTemplate>
                                <Button Background="Transparent" BorderThickness="0">
                                    <Image Source="{Binding CoverImagePath}" Width="220" Height="335"/>
                                </Button>
                            </ItemContainerTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
